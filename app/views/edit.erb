  <body>
    <h1>Update Blog Post</h1>
      <h3><%=@post.name%></h3>
      <h3><%=@post.content%></h3>
    <form method="POST" action="/posts/<%= @post.id %>">
      <input id="hidden" type="hidden" name="_method" value="patch">
       Edit Blog Name: <input id="name" type="text" name="blog[name]">
       Edit Blog Content: <input id="content" type="text" name="blog[content]">
      <input type="submit" value="submit">
    </form>
  </body>
</html>
