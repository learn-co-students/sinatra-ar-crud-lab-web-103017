<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name" id="name" value="<%=@post.name%>"><br>
  <input type="textarea" name="content" id="content" value="<%=@post.content%>"><br>
  <input type="submit" value="submit">
</form>