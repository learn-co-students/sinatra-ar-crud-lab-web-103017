<ul>
  <li><%= @post.name  %></li>
  <li><%= @post.content%></li>
</ul>

<form action="/posts/<%= @post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name">
  <input type="text" name="content">
  <input type="submit" value="submit"/>
</form>
